-var linkItems = ['facebook', 'twitter', 'google-plus', 'linkedin'];
-var linkUrls = ['facebook.com', 'twitter.com', 'google-plus.com', 'linkedin.com'];

footer.footer
	.footer__top
		.container
			.footer__title Get In Touch
			.footer__links
				each item, key in linkItems
					a.footer__social(href="http://"+linkUrls[key])
						i(class="fa fa-" + item aria-hidden="true")=linkItem
							span.visually-hidden=linkItems
			.footer__text Subscribe to our newsletter
			form(action="#" method="post")
				footer__field: input.footer__input(type="email" placeholder="Email Address")
				button(type="submit").button Subscribe

	.footer__bottom
